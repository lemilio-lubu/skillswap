<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Busqueda">

    <!-- Header con t칤tulo y perfil -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#5B7CE6"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skillswap"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/btn_perfil"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:contentDescription="Perfil"
            android:focusable="true"
            android:gravity="center"
            android:text="游녻"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Contenedor de b칰squeda con sugerencias -->
    <RelativeLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Barra de b칰squeda -->
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="游댌"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_buscar"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Buscar habilidades, instructores, categor칤as..."
                android:inputType="text"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Panel de sugerencias -->
        <LinearLayout
            android:id="@+id/layout_sugerencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_layout"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:visibility="gone">
            <!-- Las sugerencias se a침aden din치micamente -->
        </LinearLayout>

    </RelativeLayout>

    <!-- Contador de resultados -->
    <TextView
        android:id="@+id/tv_resultados_contador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:text="Cargando habilidades..."
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filtros de categor칤as -->
    <HorizontalScrollView
        android:id="@+id/filtros_scroll"
        android:layout_width="419dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_resultados_contador">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filtro_todas"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="#5B7CE6"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Todas"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filtro_matematicas"
                android:layout_width="125dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="#E0E0E0"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Matem치ticas"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filtro_programacion"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#E0E0E0"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Programaci칩n"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Bot칩n para filtros avanzados -->
    <Button
        android:id="@+id/btn_filtros_avanzados"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_default"
        android:text="M치s filtros"
        android:textColor="#000000"
        android:textSize="12sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filtros_scroll" />

    <!-- Filtros avanzados (ocultos inicialmente) -->
    <LinearLayout
        android:id="@+id/layout_filtros_avanzados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_filtros_avanzados">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rango de precio"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_precio"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modalidad"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_modalidad_filtro"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_filtros_avanzados" />

    <!-- ScrollView con contenido de habilidades -->
    <ScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_filtros_avanzados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/skills_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Las cards de habilidades se a침aden din치micamente aqu칤 -->
            <!-- Mantener las cards originales como ejemplo/fallback -->

            <!-- Card Matem치ticas b치sicas -->
            <LinearLayout
                android:id="@+id/card_matematicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/titulo_matematicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matem치ticas b치sicas"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripcion_matematicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayudo con 치lgebra, geometr칤a y c치lculo b치sico. Explico conceptos claros y ejercicios pr치cticos."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/instructor_matematicas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Por Mar칤a Garc칤a"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/precio_matematicas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5/hora"
                        android:textColor="#5B7CE6"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Card Python -->
            <LinearLayout
                android:id="@+id/card_python"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/titulo_python"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python para principiantes"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripcion_python"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aprende programaci칩n desde cero. Incluye proyectos pr치cticos y ejercicios."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/instructor_python"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Por Carlos L칩pez"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/precio_python"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$8/hora"
                        android:textColor="#5B7CE6"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Card Ingl칠s -->
            <LinearLayout
                android:id="@+id/card_ingles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/titulo_ingles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingl칠s conversacional"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripcion_ingles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Practica conversaci칩n en ingl칠s. Mejora tu fluidez y confianza al hablar."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/instructor_ingles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Por Ana Ruiz"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/precio_ingles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6/hora"
                        android:textColor="#5B7CE6"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Mensaje de no resultados -->
    <LinearLayout
        android:id="@+id/tv_no_resultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_filtros_avanzados">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游댌"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No se encontraron resultados"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intenta con otros t칠rminos o filtros"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>