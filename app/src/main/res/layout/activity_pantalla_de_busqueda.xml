<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Busqueda">

    <!-- Header con t칤tulo y perfil -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#6a6ce9"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skillswap"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/btn_perfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_background"
            android:clickable="true"
            android:contentDescription="Perfil"
            android:focusable="true"
            android:gravity="center"
            android:text="游녻"
            android:textSize="20sp"
            android:layout_marginEnd="4dp" />

    </LinearLayout>

    <!-- Contenedor de b칰squeda con sugerencias -->
    <RelativeLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Barra de b칰squeda -->
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="游댌"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_buscar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/search_background"
                android:hint="Buscar habilidades, instructores, categor칤as..."
                android:inputType="text"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Panel de sugerencias -->
        <LinearLayout
            android:id="@+id/layout_sugerencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_layout"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:visibility="gone">
            <!-- Las sugerencias se a침aden din치micamente -->
        </LinearLayout>

    </RelativeLayout>

    <!-- Contador de resultados -->
    <TextView
        android:id="@+id/tv_resultados_contador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:text="Cargando habilidades..."
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filtros de categor칤as -->
    <HorizontalScrollView
        android:id="@+id/filtros_scroll"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_resultados_contador">

        <LinearLayout
            android:id="@+id/categories_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Las categor칤as se a침aden din치micamente aqu칤 -->

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#6a6ce9"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filtros_scroll"
        app:layout_constraintBottom_toTopOf="@id/scroll_view_content" />

    <!-- ScrollView con contenido de habilidades -->
    <ScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/skills_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Las cards de habilidades se a침aden din치micamente aqu칤 -->

        </LinearLayout>

    </ScrollView>

    <!-- Mensaje de no resultados -->
    <LinearLayout
        android:id="@+id/tv_no_resultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游댌"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No se encontraron resultados"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intenta con otros t칠rminos o filtros"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>