<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/accent_color">    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="40dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="16dp"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/editar_habilidad"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_top_background"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título de la habilidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_habilidad"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <EditText
                android:id="@+id/et_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:padding="16dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="24dp" />

            <!-- Categoría -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/rounded_spinner"
                android:layout_marginBottom="24dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <EditText
                android:id="@+id/et_descripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:textColor="@color/text_primary"
                android:padding="16dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp" />

            <!-- Precio por hora -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precio_hora"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <EditText
                android:id="@+id/et_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:padding="16dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="numberDecimal"
                android:layout_marginBottom="24dp" />

            <!-- Lo que incluye -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lo_que_incluye"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            <EditText
                android:id="@+id/et_incluye"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textColor="@color/text_primary"
                android:padding="16dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp" />

            <!-- Modalidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modalidad"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_modalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/rounded_spinner"
                android:layout_marginBottom="24dp" />

            <!-- Estadísticas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estadisticas"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_stats_background"
                android:backgroundTint="#F3F4F6"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tv_sesiones_completadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />

            </LinearLayout>
            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_guardar_cambios"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/accent_color"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>